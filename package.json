{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "ExpressJS based API boilerplate for my app development",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node src/index.tsx",
    "dev": "NODE_ENV=development nodemon --exec ts-node src/index.tsx",
    "build": "NODE_ENV=production tsc -p .",
    "migrate:dev": "dotenv -e  .env.development prisma migrate dev --name init",
    "migrate:prod": "dotenv -e  .env.production prisma migrate deploy",
    "generate": "prisma generate",
    "postinstall": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuraykaraaslan/express-boilerplate.git"
  },
  "author": "Kuray Karaaslan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kuraykaraaslan/express-boilerplate/issues"
  },
  "homepage": "https://github.com/kuraykaraaslan/express-boilerplate#readme",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "express": "^4.19.2",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.16.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "twilio": "^5.2.3"
  }
}
