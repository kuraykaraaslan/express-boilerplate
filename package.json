{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "ExpressJS based API boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register index.tsx",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register index.tsx",
    "dev:sudo": "sudo ts-node-dev --respawn --transpile-only -r tsconfig-paths/register index.tsx",
    "build": "tsc -p .",
    "migrate": "prisma migrate dev --name init --preview-feature",
    "generate": "prisma generate",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier": "prettier .",
    "postinstall": "prisma generate --schema prisma/schema",
    "cert_create": "openssl req -x509 -newkey rsa:2048 -keyout certs/tempkey.pem -out certs/cert.pem -days 365 -nodes -config req.cnf",
    "cert_decryt": "openssl rsa -in certs/tempkey.pem -out certs/key.pem",
    "cert": "npm run cert_create && npm run cert_decryt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuraykaraaslan/express-boilerplate.git"
  },
  "author": "Kuray Karaaslan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kuraykaraaslan/express-boilerplate/issues"
  },
  "homepage": "https://github.com/kuraykaraaslan/express-boilerplate#readme",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.3",
    "express": "^5.0.1",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "prisma": "^5.16.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.16.2",
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.0.2",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express-rate-limit": "^7.5.0",
    "geoip-lite": "^1.4.10",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.2.3",
    "winston": "^3.17.0"
  },
  "keywords": []
}
