{
  "compilerOptions": {
    "target": "es2016", 
    "lib": [
      "es6"
    ],
    "module": "commonjs", 
    "rootDir": ".",     
    "resolveJsonModule": true,
    "allowJs": true,    
    "outDir": "dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,                    
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    }, 
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "files": ["./types/express.d.ts"]
}